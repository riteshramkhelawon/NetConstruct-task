@{
    Layout = "../../Assets/Html/template.cshtml";
}

<!DOCTYPE html>
<body>
    @if (ViewBag.blogFound)
    {
        <!-- Blog Post Content -->
        <h1 class="mt-4">@ViewBag.title</h1>
        <hr>
        <p>Posted on  @String.Format("{0:dddd d MMMM yyyy}", ViewBag.date)</p>
        <hr>
        <img class="img-fluid rounded" src="@ViewBag.image" alt="@ViewBag.title">
        <hr>
        @Html.Raw(@ViewBag.htmlContent)
        <hr>

        <!-- Blog Post Comment Form -->
        <div class="card my-4">
            <h5 class="card-header">Leave a Comment</h5>
            <div class="card-body">
                <form method="post" action="AddComment">
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="Name">Name</label>
                            <input type="text" class="form-control" name="name" id="name" placeholder="Your name" required>
                        </div>
                        <div class="form-group col-md-6">
                            <label for="EmailAddress">Email Address</label>
                            <input type="email" class="form-control" name="emailAddress" id="emailAddress" placeholder="Your email address" required>
                            <p class="text-danger" id="emailMessage" style="display: none">This email address is not valid</p>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="Message">Message</label>
                        <textarea placeholder="What's your thoughts?" name="message" id="message" class="form-control" rows="3" required></textarea>
                    </div>
                    <button id="submitCommentBtn" type="submit" class="btn btn-primary">Post Comment</button>
                    <input type="hidden" name="blogId" id="blogID" value="@ViewBag.blogID" />
                </form>
            </div>
        </div>

        <hr />

        <!-- Blog post comments -->
        <h2>Comments</h2>
        if (ViewBag.comments != null)
        {
            int i = 0;
            foreach (var comment in ViewBag.comments)
            {
                <div class="media mb-4">
                    <img class="d-flex mr-3 rounded-circle user-avatar" src="" alt=@comment.id>
                    <div class="media-body">
                        <h5 class="mt-0"><strong>@comment.name</strong><small><em> (@String.Format("{0:d MMMM yyyy}", @comment.date) at @comment.date.ToString("HH:mm")) </em></small></h5>
                        @comment.message
                    </div>
                    <!-- Show Reply Button if No Current Reply Exists for This Comment -->
                    @if (comment.reply == null)
                    {
                        <button onclick="$('#replyForm-@i').slideToggle();" id="replyBtn-@i" class="btn btn-sm btn-outline-dark" type="button">Reply</button>
                    }
                </div>

                <!-- Comment Replies -->
                if (comment.reply != null)
                {
                    <div class="media ml-5 mr-5 mb-1 mt-1">
                        <div class="rounded p-3 bg-light media-body">
                            <h5 class="mt-0"><small><strong>Reply from @comment.reply.name</strong><em> (@String.Format("{0:d MMMM yyyy}", @comment.reply.date) at @comment.reply.date.ToString("HH:mm"))</em></small></h5>
                            <p class="text-secondary">@comment.reply.message</p>
                        </div>
                    </div>
                }

                <!-- Comment Reply Form-->
                <div style="display:none" class="mb-2 m-5" id="replyForm-@i">
                    <form method="post" action="addCommentReply">
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label for="Name">Name</label>
                                <input type="text" class="form-control" name="replyName" id="replyName" placeholder="Name" required>
                            </div>
                            <div class="form-group col-md-6">
                                <label for="EmailAddress">Email Address</label>
                                <input type="email" class="form-control" name="replyEmailAddress" id="replyEmailAddress" placeholder="Email address" required>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="Message">Message</label>
                            <textarea placeholder="Your reply" name="replyMessage" id="replyMessage" class="form-control" rows="1" required></textarea>
                        </div>
                        <button id="submitCommentBtn" type="submit" class="btn btn-outline-secondary">Post Reply</button>
                        <input type="hidden" name="blogId" id="blogID" value="@ViewBag.blogID" />
                        <input type="hidden" name="commentId" id="commentId" value="@comment.id" />
                    </form>
                </div>
                <hr />
                i++;
            }

        }
        else
        {
            <!-- No Existing Comments for Blog -->
            <p>There are no comments yet</p>
        }
    }
    else
    {
        <!-- Blog Not Found -->
        <h1>Sorry, this blog was not found</h1>
    }

    <script src="../../Assets/Scripts/emailValidation.js"></script>
</body>    

